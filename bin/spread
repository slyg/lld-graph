#!/bin/bash
. .env
source lib/create_dot_with.sh
source lib/create_diagram.sh

dot_file="dist/spread.dot"
png_file="dist/spread-diagram.png"

mkdir -p dist

relations=$(curl \
    $BROKER_URL \
    | jq -f './queries/spread.jq' \
    | tr -d '"')

create_dot_with $relations > $dot_file
create_diagram $dot_file $png_file
